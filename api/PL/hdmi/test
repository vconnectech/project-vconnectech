IDIR =.
BUILD = ../../../build
CC=aarch64-linux-gnu-gcc
AR=aarch64-linux-gnu-ar
CFLAGS=-I$(IDIR)
HEADER = ../../common/*.h 
ODIR=.
LDIR =./lib

_DEPS = *.h
DEPS = $(patsubst %,$(IDIR)/%,$(_DEPS))

INC_DIR = ../../common/
CFLAGS=-c -Wall -I$(INC_DIR)

SRC = xhdmi_edid.c      \
      xhdmi_hdcp_keys.c \
      xhdmiphy1.c       \
      xhdmiphy1_gtye5.c \
      xhdmiphy1_hdmi_intr.c \
      xhdmiphy1_mmcme5.c


OBJ = $(SRC:.c=.o)

DMA_API.a: 
	$(CC)  -c $(SRC) $< $(CFLAGS)
	$(AR) rcs $@ $(OBJ)
	cp -f $@ $(BUILD)/.

.PHONY: clean

clean:
	rm -f $(ODIR)/*.o *~ core $(INCDIR)/*~  *.gch DMA_API.a
